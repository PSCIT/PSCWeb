
@{
    ViewBag.Title = "Gabka 2018";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    @@media only screen and (min-width : 320px) {
        .slickclass {
            display: none;
        }

        header {
            background: none;
            height: auto;
        }

        .overlay {
            display: none;
        }

        .footerskew {
            display: none;
        }

        footer {
            margin: 0;
        }

            footer img {
                padding-top: 30px;
            }
    }
</style>

<div style="position:absolute;right:120px;top:10px;z-index:999999999;">
    <a target="_blank" href="https://mail.psc.com.kw/owa" class="mont" style="color:#444">@@</a> | <a class="mont" style="color:#444" href="">English</a> | <a style="font-family: 'Droid Arabic Kufi', sans-serif;color:#444" href=@Url.Action("Media7Ar","Home")>عربي</a>
</div>

<div class="container">

    <div class="row">
        <div class="col-lg-12 mont">
            <br />
            <h1 class="text-center">Ramadan Gathering</h1>
            <br />
            <br />
            <h4 style="line-height:35px;">
                The Public Services Company held its annual gathering for its officials and employees in the affiliated National Shooting Company building on 4/6/2018
            </h4>
            <br />
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">
            @for(var i = 2; i < 10; i++)
            {
                string path = "/Content/Images/News_Events/Gabka18/NOU-00"+ i + ".jpg";
                <div class="gallery">
                    <div class="thumbnail-1 wow fadeInLeft">
                        <img src="@path" />
                    </div>
                    <div class="large-1 wow bounceInLeft">
                        <img src="@path" />
                        <span class="close">&#x2715;</span>
                    </div>
                </div>
            }

            @for (var i = 10; i < 100; i++)
            {
                string path = "/Content/Images/News_Events/Gabka18/NOU-0" + i + ".jpg";
                <div class="gallery">
                    <div class="thumbnail-1 wow fadeInLeft">
                        <img src="@path" />
                    </div>
                    <div class="large-1 wow bounceInLeft">
                        <img src="@path" />
                        <span class="close">&#x2715;</span>
                    </div>
                </div>
            }

            @for (var i = 100; i < 120; i++)
            {
                string path = "/Content/Images/News_Events/Gabka18/NOU-" + i + ".jpg";
                <div class="gallery">
                    <div class="thumbnail-1 wow fadeInLeft">
                        <img src="@path" />
                    </div>
                    <div class="large-1 wow bounceInLeft">
                        <img src="@path" />
                        <span class="close">&#x2715;</span>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<br /><br /><br />

